<div class='new-article-btn'><%= link_to 'Нова стаття', new_article_path %></div>
<div id='article_list'>
  <% @articles.each do |article| %>
    <div class='article' id="article_<%= article.id %>">
      <div class='title'>
        <%= image_tag article.photo %>
        <%= link_to "#{article.title}", article_path(article) %>
      </div>
      <div class='text'><%= article.text %></div>
      <% if article.user == current_user %>
        <div class='btns'>
          <%= link_to '✎', edit_article_path(article) %>
          <%= link_to '×', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?', remote: true} %>
         </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= will_paginate @articles %>

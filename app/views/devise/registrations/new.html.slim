= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .logo-space
  .authForm
    .formLists
      .member-list-newAccount
        .form-title
          h1= t('.new_acount')
        form#registerForm
          label.avatar for='user_avatar' =t('.upload')
          = f.input :avatar, label: false
          = f.hidden_field :avatar_cache
          = f.email_field :email, placeholder: t('.email')
          = f.password_field :password, autocomplete: "off", placeholder: t('.password')
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: t('.confirmation_password')
          .signup-class
            = f.check_box :doctor
            label for="user_doctor" = t('.doctor')
          button.sing_up action="f.submit" name="signup" type="submit" = t('.registration')
